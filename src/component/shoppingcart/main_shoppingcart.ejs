    //全选反选

    checkBoxChange();


    function deleteList() {


        document.getElementById('deleteBtn').addEventListener('click', function () {


            jfShowTips.dialogShow({

                'mainText': '友情提示',
                'minText': '确认要删除这个商品吗？',
                'checkFn': function () {

                    jfShowTips.dialogRemove();//弹出框消失

                    var listBox = document.getElementById('list_contain').getElementsByClassName('list_contain');

                    for (var i = 0; i < listBox.length; i++) {

                        if (listBox[i].getElementsByClassName('radio')[0].checked) {


                            listBox[i].style.display = 'none';


                        }
                    }


                }
            });


        }, false)

    }

    deleteList();





</script>

